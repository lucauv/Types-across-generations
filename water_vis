import pandas as pd
import matplotlib.pyplot as plt

file_path = 'https://github.com/lucauv/Types-across-generations/blob/main/dex.xlsx?raw=true'
df = pd.read_excel(file_path, sheet_name='Pokedex')

listw = []
def getWater():
    for index, row in df.iterrows():
        if row['Type I'] == 'Water':
            listw.append(row['Generation'])
        elif row['Type II'] == 'Water':
            listw.append(row['Generation'])
getWater()

range = (1, 9)
bins = 9
plt.hist(listw, bins=bins, range=range, histtype='bar', rwidth=0.8)
plt.xlabel('generations')
plt.ylabel('# of water pokemon')
plt.title('water pokemon across gens')
plt.show()
