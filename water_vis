import pandas as pd
import requests
import matplotlib.pyplot as plt

file_path = 'https://gitlab.com/lucauv/repo/Types-across-generations/raw/master/dex.zip'
myfile = requests.get(file_path)
df = pd.read_excel(myfile.content, sheet_name='Pokedex', engine='openpyxl')

listw = []
def getWater():
    for index, row in df.iterrows():
        if row['Type I'] == 'Water':
            listw.append(row['Generation'])
        elif row['Type II'] == 'Water':
            listw.append(row['Generation'])
getWater()

range = (1, 9)
bins = 9
plt.hist(listw, bins=bins, range=range, histtype='bar', rwidth=0.8)
plt.xlabel('generations')
plt.ylabel('# of water pokemon')
plt.title('water pokemon across gens')
plt.show()
